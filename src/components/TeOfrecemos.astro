<style>
  .te-ofrecemos {
    padding: var(--spacing-3xl) 0;
    background: white;
  }

  .section-title {
    font-size: 2.75rem;
    font-weight: 700;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0 0 var(--spacing-2xl) 0;
    text-align: center;
  }

  .beneficios-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    max-width: 900px;
    margin: 0 auto;
    padding-bottom: 4rem;
  }

  .beneficios-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .beneficio-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    position: relative;
  }

  .check-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
  }

  .beneficio-text {
    font-size: 1.3rem;
    font-weight: 700;
    line-height: 1.4;
    color: var(--color-primary);
    margin: 0;
    flex: 1;
  }

  .beneficio-text .highlight {
    color: var(--color-secondary);
    font-weight: 700;
  }

  .beneficio-text .emoji {
    font-size: 1.4rem;
  }

  .beneficio-text .specialty-icons {
    font-size: 1.2rem;
    margin-left: 0.25rem;
  }

  .beneficio-icon {
    position: absolute;
    right: -40px;
    top: 50%;
    transform: translateY(-50%);
  }

  .globe-icon {
    width: 120px;
    height: 120px;
  }

  .globe-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media (max-width: 1024px) {
    .beneficio-icon {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .te-ofrecemos {
      padding: var(--spacing-2xl) 0;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: var(--spacing-xl);
    }

    .beneficios-container {
      gap: var(--spacing-md);
    }

    .beneficios-column {
      gap: var(--spacing-md);
    }

    .check-icon {
      width: 40px;
      height: 40px;
    }

    .beneficio-text {
      font-size: 1.1rem;
    }

    .beneficio-text .emoji {
      font-size: 1.2rem;
    }

    .beneficio-text .specialty-icons {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 1.75rem;
    }

    .check-icon {
      width: 36px;
      height: 36px;
    }

    .beneficio-text {
      font-size: 1rem;
    }
  }
</style>
