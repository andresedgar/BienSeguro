---
const slides = [
  {
    image: '/images/carrusel-1.png',
    line1: 'Más que un',
    line2: 'seguro, somos',
    highlight: 'tu aliado en cada etapa de tu vida',
    buttonText: 'Conócenos',
    buttonLink: '/nosotros'
  },
  {
    image: '/images/carrusel-2.png',
    line1: 'NOS ASEGURAMOS',
    line2: 'DE PROTEGER',
    highlight: 'LO QUE MÁS TE IMPORTA.',
    buttonText: 'Contáctanos',
    buttonLink: '/contacto'
  },
  {
    image: '/images/carrusel-3.png',
    line1: 'Soluciones',
    line2: 'personalizadas',
    highlight: 'para garantizar tu tranquilidad y bienestar.',
    buttonText: 'Cotiza aquí',
    buttonLink: '/contacto'
  }
];
---

<section class="hero">
  <div class="hero__carousel">
    {slides.map((slide, index) => (
      <div class={`hero__slide ${index === 0 ? 'hero__slide--active' : ''}`} data-slide={index}>
        <div class="hero__image-side">
          <img src={slide.image} alt="" class="hero__image" loading={index === 0 ? 'eager' : 'lazy'} />
        </div>
        <div class="hero__curve">
          <svg viewBox="0 0 100 100" preserveAspectRatio="none" class="hero__curve-svg">
            <path d="M0,0 Q50,50 0,100 L0,0 Z" fill="#6bb12e"/>
          </svg>
        </div>
        <div class="hero__content-side">
          <div class="hero__content">
            <h1 class="hero__title">
              <span class="hero__title-line">{slide.line1}</span>
              <span class="hero__title-line">{slide.line2}</span>
              <span class="hero__title-highlight">{slide.highlight}</span>
            </h1>
            <a href={slide.buttonLink} class="hero__button">{slide.buttonText}</a>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="hero__dots">
    {slides.map((_, index) => (
      <button
        class={`hero__dot ${index === 0 ? 'hero__dot--active' : ''}`}
        data-dot={index}
        aria-label={`Ir a slide ${index + 1}`}
      ></button>
    ))}
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 450px;
    overflow: hidden;
  }

  .hero__carousel {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s ease;
  }

  .hero__slide--active {
    opacity: 1;
    visibility: visible;
  }

  .hero__image-side {
    position: relative;
    width: 50%;
    height: 100%;
    overflow: hidden;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__curve {
    position: absolute;
    left: calc(50% - 40px);
    top: 0;
    width: 80px;
    height: 100%;
    z-index: 2;
  }

  .hero__curve-svg {
    width: 100%;
    height: 100%;
  }

  .hero__content-side {
    position: relative;
    width: 50%;
    height: 100%;
    background-color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero__content {
    padding: var(--spacing-2xl);
    text-align: center;
    max-width: 400px;
  }

  .hero__title {
    color: var(--color-white);
    margin-bottom: var(--spacing-xl);
    line-height: 1.3;
  }

  .hero__title-line {
    display: block;
    font-size: 2.2rem;
    font-weight: 400;
    font-style: italic;
  }

  .hero__title-highlight {
    display: block;
    font-size: 2.2rem;
    font-weight: 700;
    font-style: italic;
    margin-top: 0.25rem;
  }

  .hero__button {
    display: inline-block;
    padding: 0.85rem 2.5rem;
    background-color: var(--color-secondary);
    color: var(--color-white);
    font-weight: 600;
    font-size: 1rem;
    border-radius: 30px;
    transition: background-color var(--transition-fast), transform var(--transition-fast);
  }

  .hero__button:hover {
    background-color: #5a9a26;
    transform: scale(1.05);
  }

  .hero__dots {
    position: absolute;
    bottom: 20px;
    left: 25%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .hero__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background-color var(--transition-fast);
  }

  .hero__dot--active,
  .hero__dot:hover {
    background-color: var(--color-secondary);
  }

  /* Tablet */
  @media (max-width: 968px) {
    .hero {
      height: 400px;
    }

    .hero__title-line,
    .hero__title-highlight {
      font-size: 1.5rem;
    }

    .hero__content {
      padding: var(--spacing-lg);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero {
      height: auto;
      min-height: 500px;
    }

    .hero__slide {
      flex-direction: column;
    }

    .hero__image-side {
      width: 100%;
      height: 250px;
    }

    .hero__curve {
      display: none;
    }

    .hero__content-side {
      width: 100%;
      height: auto;
      min-height: 250px;
    }

    .hero__content {
      padding: var(--spacing-xl) var(--spacing-lg);
    }

    .hero__title-line,
    .hero__title-highlight {
      font-size: 1.3rem;
    }

    .hero__dots {
      left: 50%;
      bottom: 15px;
    }
  }
</style>

<script>
  const slides = document.querySelectorAll('.hero__slide');
  const dots = document.querySelectorAll('.hero__dot');
  let currentSlide = 0;
  let intervalId: ReturnType<typeof setInterval>;

  function showSlide(index: number) {
    slides.forEach((slide, i) => {
      slide.classList.toggle('hero__slide--active', i === index);
    });
    dots.forEach((dot, i) => {
      dot.classList.toggle('hero__dot--active', i === index);
    });
    currentSlide = index;
  }

  function nextSlide() {
    const next = (currentSlide + 1) % slides.length;
    showSlide(next);
  }

  function startAutoplay() {
    intervalId = setInterval(nextSlide, 5000);
  }

  function stopAutoplay() {
    clearInterval(intervalId);
  }

  // Dot click handlers
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      stopAutoplay();
      showSlide(index);
      startAutoplay();
    });
  });

  // Start autoplay
  startAutoplay();

  // Pause on hover
  const hero = document.querySelector('.hero');
  hero?.addEventListener('mouseenter', stopAutoplay);
  hero?.addEventListener('mouseleave', startAutoplay);
</script>
