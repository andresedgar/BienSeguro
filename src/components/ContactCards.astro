<style>
  .contact-cards {
    padding: var(--spacing-3xl) 0;
    background: linear-gradient(to bottom,
      #2a5a4d 0%,
      #1a3d52 25%,
      #0d2640 40%,
      #0d2640 50%,
      white 50%,
      white 100%);
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-2xl);
    max-width: 1200px;
    margin: 3rem auto;
  }

  .contact-card {
    background: white;
    border-radius: 20px;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-height: 180px;
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  }

  .card-icon {
    margin-bottom: var(--spacing-lg);
  }

  .card-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-text {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-primary);
    font-weight: 600;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .cards-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .contact-card {
      flex-direction: row;
      text-align: left;
      padding: var(--spacing-xl);
    }

    .card-icon {
      margin-bottom: 0;
      margin-right: var(--spacing-lg);
    }

    .card-content {
      justify-content: flex-start;
    }
  }

  @media (max-width: 768px) {
    .contact-cards {
      padding: var(--spacing-2xl) 0;
    }

    .cards-grid {
      gap: var(--spacing-lg);
    }

    .contact-card {
      padding: var(--spacing-lg);
    }

    .card-icon svg {
      width: 50px;
      height: 50px;
    }

    .card-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .contact-card {
      flex-direction: column;
      text-align: center;
    }

    .card-icon {
      margin-right: 0;
      margin-bottom: var(--spacing-md);
    }

    .card-content {
      justify-content: center;
    }

    .card-text {
      font-size: 0.95rem;
    }
  }
</style>
