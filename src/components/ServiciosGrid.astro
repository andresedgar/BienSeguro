---
const servicios = [
  {
    title: 'SEGURO',
    subtitle: 'DE VIDA',
    image: '/images/FOTO-SEGURO-DE-VIDA.png',
    link: '/servicios#vida'
  },
  {
    title: 'SEGURO',
    subtitle: 'DE AHORRO Y DE RETIRO',
    image: '/images/FOTO-SEGURO-DE-AHORRO-Y-DE-RETIRO.png',
    link: '/servicios#ahorro'
  },
  {
    title: 'SEGURO',
    subtitle: 'DE GMM',
    extra: '(GASTOS MEDICOS MAYORES)',
    image: '/images/FOTO-SEGURO-GASTOS-MEDICOS-MAYORES.png',
    link: '/servicios#gmm'
  },
  {
    title: 'SEGURO',
    subtitle: 'COLECTIVO',
    image: '/images/FOTO-SEGURO-COLECTIVO.png',
    link: '/servicios#colectivo'
  },
  {
    title: 'SEGURO',
    subtitle: 'DE AUTOS',
    image: '/images/FOTO-SEGURO-DE-AUTOS.png',
    link: '/servicios#autos'
  },
  {
    title: 'SEGURO',
    subtitle: 'DE FLOTILLAS',
    image: '/images/FOTO-SEGURO-DE-FLOTILLAS.png',
    link: '/servicios#flotillas'
  }
];
---

<section class="servicios">
  <div class="container">
    <h2 class="servicios__title">SERVICIOS</h2>
    <div class="servicios__grid">
      {servicios.map((servicio) => (
        <a href={servicio.link} class="servicio-card">
          <div class="servicio-card__image-wrapper">
            <img src={servicio.image} alt={`${servicio.title} ${servicio.subtitle}`} class="servicio-card__image" loading="lazy" />
            <div class="servicio-card__overlay"></div>
          </div>
          <div class="servicio-card__content">
            <span class="servicio-card__title">{servicio.title}</span>
            <span class="servicio-card__subtitle">{servicio.subtitle}</span>
            {servicio.extra && <span class="servicio-card__extra">{servicio.extra}</span>}
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .servicios {
    padding: var(--spacing-2xl) 0;
    background-color: var(--color-gray-lighter);
  }

  .servicios__title {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--spacing-2xl);
    letter-spacing: 0.05em;
  }

  .servicios__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    max-width: 900px;
    margin: 0 auto;
  }

  .servicio-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    aspect-ratio: 1;
    display: block;
    transition: transform var(--transition-fast);
  }

  .servicio-card:hover {
    transform: scale(1.03);
  }

  .servicio-card__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .servicio-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .servicio-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(25, 61, 97, 0.7) 0%, rgba(25, 61, 97, 0.4) 100%);
    transition: background var(--transition-fast);
  }

  .servicio-card:hover .servicio-card__overlay {
    background: linear-gradient(135deg, rgba(107, 177, 46, 0.85) 0%, rgba(107, 177, 46, 0.7) 100%);
  }

  .servicio-card__content {
    position: absolute;
    bottom: var(--spacing-lg);
    left: var(--spacing-lg);
    z-index: 2;
    display: flex;
    flex-direction: column;
  }

  .servicio-card__title {
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--color-white);
    letter-spacing: 0.05em;
  }

  .servicio-card__subtitle {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-white);
    letter-spacing: 0.02em;
  }

  .servicio-card__extra {
    font-size: 0.6rem;
    font-weight: 400;
    color: var(--color-white);
    opacity: 0.9;
    letter-spacing: 0.02em;
  }

  @media (max-width: 768px) {
    .servicios__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-md);
    }

    .servicio-card__content {
      bottom: var(--spacing-md);
      left: var(--spacing-md);
    }

    .servicio-card__title {
      font-size: 0.75rem;
    }

    .servicio-card__subtitle {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .servicios__title {
      font-size: 1.5rem;
    }

    .servicios__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-sm);
    }
  }
</style>
